<VirtualHost *:80>
#    ServerName api.events.{{ fqdn }}
    # ServerName sets the name to listen for with requests
    ErrorLog /var/log/httpd/events.{{ fqdn }}-error_log
    CustomLog /var/log/httpd/events.{{ fqdn }}-access_log common
    ForensicLog /var/log/httpd/events.{{ fqdn }}-forensic.log

    ProxyPreserveHost On

    ProxyPass / http://localhost:5000/
    ProxyPassReverse / http://localhost:5000/
</VirtualHost>

